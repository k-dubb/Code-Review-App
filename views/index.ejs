    <div class="item" id="saying">Your home for web development study!</div>

    <div class="ui grid container">
        <div class="centered seven wide stackable column" id="categoryList">
            <button class="ui black basic button" id="category">Categories:</button>
            <a href="/study"><button class="ui violet basic button" id="violet">HTML/CSS</button></a>
            <a href="/study"><button class="ui green basic button" id="green">JavaScript</button></a> 
            <a href="/study"><button class="ui blue basic button" id="blue">Ruby on Rails</button></a>
        </div>
        <div class="centered seven wide column">
            <div class="ui segment" id="loginSection">
                <h4>Sign up or login to make your own flashcards!</h4>
                <a href="/login"><button class="ui black button" id="log">Login</button></a>
                <a href="/signup"><button class="ui black button" id="log">Signup</button></a>
            </div>
        </div>
    </div>

<div class="centered seven wide column"
ng-repeat="flash in flash.all" >
  <flash></flash>
</div>


